@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="wrapper">

    <div class="logo">
        <img src="~/images/CAA.png" alt="logo">
    </div>
    <div class="text-center mt-4 name" style="font-size: 24px; font-weight: bold;">
        Login
</div>
    <form class="mt-3" id="account" method="post">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />

            <span asp-validation-for="Input.Email" class="text-danger far "></span>
        </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger far "></span>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn mt-3">Log in</button>
        </div>
        <div class="text-center fs-6">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
        </div>
    </form>
</div>
<style>
    #login-submit {
            display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease-in-out;
            transform: translateY(0);
            height: 50px;
    }

            #login-submit:hover {
        transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
    }

    .form-control {
        width: 100%;
        border-radius: 25px;
        transition: all 0.5s ease-in-out;
    }

    .form-control:focus {
        width: 80%;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}