@model CAAMarketing.Models.InventoryTransfer

@{
    ViewData["Title"] = "Create";
}

<h1>Create Inventory Transfer</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
            </div>

            <div class="form-group">
                <label asp-for="FromLocationId" class="control-label"></label>
                <select asp-for="FromLocationId" class="form-control" asp-items="ViewBag.FromLocationId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ToLocationId" class="control-label"></label>
                <select asp-for="ToLocationId" asp-items="@ViewBag.ToLocationId" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TransferDate" class="control-label"></label>
                <input asp-for="TransferDate" class="form-control" />
                <span asp-validation-for="TransferDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}